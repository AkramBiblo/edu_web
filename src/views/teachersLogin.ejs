<body>
    <%- include('./partials/header.ejs') %> 
    <div class="container-fluid bg-warning border p-4" style="max-width: 300px;border-radius: 10px;">
        <!-- Form  -->
            <div class="container text-light">
                <h4>Teacher Login</h4>
            </div>
             
                <%- include('./partials/error.ejs') %>
            
            <form action="/teachers/login" method="POST">
                <div class="container mt-5">
                    <div class="row mt-3">
                        <input type="text" class="form-control" name="campus_key" placeholder="Campus Key" required>
                    </div>
                    <div class="row mt-3">
                        <input type="text" class="form-control" name="email" placeholder="Email" required>
                    </div>
                    <div class="row mt-3">
                        <input type="text" class="form-control" name="password" placeholder="Password" required>
                    </div>
                    <div class="row d-flex justify-content-start mt-4">
                        <input class="btn btn-success mr-2" name="submit" type="submit" value="Login">
                    </div>
                </div>
            </form>
        </div> 
</body>
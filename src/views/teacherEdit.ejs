<body>
    <%- include('./partials/header.ejs') %> 
    <div class="container p-3">
        <a class="btn btn-outline-info admin-button" href="/admin">Admin Panel</a>
      </div>
    <!-- Form  -->
<div style="max-width: 600px;" class="container border p-4">
    <div class="container">
        <h1>Teachers Edit Form</h1>
    </div>

    <%- include('./partials/error.ejs') %>
    
    <% if (locals.teacher !== null) { let t = teacher %>
        <form action="/teachers/editUpdate" method="POST" enctype="multipart/form-data">
        <div class="container mt-5 p-3">
            <div class="row mt-3">
                <div class="col-lg-4">
                    <img src="/uploadedFiles/<%=t.file%>" alt="">
                </div>
                <div class="col-lg-8">
                    <input type="hidden" class="form-control" name="oldFile" value="<%= t.file %>">
                    <input type="hidden" class="form-control" name="tid" value="<%= t.id %>">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-lg-4">
                    <h6><label for="file">Change Image</label></h6>
                </div>
                <div class="col-lg-8">
                    <input type="file" name="PP">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-lg-4">
                    <h6><label for="name">Full name</label></h6>
                </div>
                <div class="col-lg-8">
                    <input type="text" class="form-control" name="name" placeholder="First name" value="<%= t.name %>" required>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-lg-4">
                    <h6><label for="address">Address</label></h6>
                </div>
                <div class="col-lg-8">
                    <input type="text" class="form-control address" name="address" placeholder="address" value="<%= t.address %>" required>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-lg-4">
                    <h6><label for="qualifications">Qualifications</label></h6>
                </div>
                <div class="col-lg-8">
                    <input type="text" class="form-control institute" name="qualifications" placeholder="College/University" value="<%= t.qualifications %>" required>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-lg-4">
                    <h6><label for="email">Email</label></h6>
                </div>
                <div class="col-lg-8">
                    <input type="text" class="form-control email" name="email" placeholder="email" value="<%= t.email %>" required>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-lg-4">
                    <h6><label for="mobile">Mobile</label></h6>
                </div>
                <div class="col-lg-8">
                    <input type="text" class="form-control email" name="mobile" placeholder="Contact" value="<%= t.mobile %>" required>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-lg-4">
                    <h6><label for="tel">Password</label></h6>
                </div>
                <div class="col-lg-8">
                    <input type="text" class="form-control email" name="password" placeholder="password" value="<%= t.password %>" required>
                </div>
            </div>
            <div class="row d-flex justify-content-end mt-4 mr-3">
                <input class="btn btn-success mr-2" name="submit" type="submit" value="Update">
            </div>
        </div>
    </form>
    <%}%>
    
    
</div>
<div style="height: 100px;"></div>

</body>
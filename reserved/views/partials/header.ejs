      function logout() {
        if (document.cookie.includes("imdmAdmin")) {
          document.cookie = "imdmAdmin=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
          location.href = '/'
        } else if (document.cookie.includes("imdm")) {

<body>

  <%- include("./partials/header.ejs") %>

  <div class="container">
    <div class="container text-center p-2 mt-3">
      <h3 class="welcomeMsg">Notice & Announcements</h3>
    </div>
    <!-- <div class="container p-3">
      <a class="btn btn-outline-info" href="/students/login">Back</a>
    </div> -->
  
  <% if (locals.message != null) {%> 
  <div class="container">
      <table class="table table-dark">
        <thead class="thead-light">
          <tr class="">
            <th>Heading</th>
            <th>Description</th>
            <th>Applicable from</th>
            <th>Applicable until</th>
            <th>File</th>
          </tr>
        </thead>
      
        <tbody>
          <% for (let announceData of message) {%>
            <tr>
                <td><%= announceData.heading %></td>
                <td><%= announceData.description %></td>
                <td><%= announceData.date %></td>
                <td><%= announceData.end %></td>
                <td><a href="/uploadedFiles/<%= announceData.file %>" download>Download - <%= announceData.file %></a></td>
            </tr>
            <% } %> 
        </tbody>
        
      </table>
    </div>
    <% } else {%> 
      <h1>No announcement available</h1>
    
    <% } %>   
    
  </div>
</body>
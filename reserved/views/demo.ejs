    <script>
        $(document).ready(() => {
            $('a').click((e) => {
              let url = e.target.getAttribute('addr')
              $('#tbl').addClass('table-primary')

                $.ajax({
                        url: url,
                        type: 'GET',
                        success: (data) => {
                          $('#routineData').empty()
                          let d = data[0]
                            $('#download').append(d)
                          let title = data[1]
                            $('#classTitle').text(title)
                          for (let i = 0; i < data.length; i++) {
                            if (i === 0) {
                                continue
                            };
                            if (i === 1) {
                              continue
                            };
                            
                            switch (i) {
                              case 0:
                                day = "Sat";
                                break;
                              case 1:
                                day = "Sun";
                                break;
                              case 2:
                                day = "Mon";
                                break;
                              case 3:
                                day = "Tue";
                                break;
                              case 4:
                                day = "Wed";
                                break;
                              case 5:
                                day = "Thu";
                          }

                            $('#routineData').append(`<tr><td><strong>${day}</strong></td></tr>`)
                            const info = data[i];
                            
                            for (let i = 0; i < info.length; i++) {
                                const elem = info[i];
                                $('#routineData').children().last().append(`<td>${elem}</td>`)
                            }
                          }
                        }
                    })
            })
        })
    </script>

   
    
   

